%-----------------------------
\begin{frame}{(QCD+WJets) estimation $Z'\rightarrow\tau_e\tau_h$}

To estimate (QCD+WJets) we propose to use the ABCD method:
\begin{center}
\footnotesize
\begin{tikzpicture}[scale=1.05]
\tkzInit[xmin=0,xmax=10,
         ymin=0,ymax=10,
         xstep=5,ystep=5]
\tkzDrawX[label={\textit{$Q(e)Q(\tau)$}}, right=1pt]
\tkzDrawY[label={\textit{Iso($\tau$)}},above=1pt]
\tkzGrid(0,0)(10,10) 
\tkzText(2.5,-2){$OS$}
\tkzText(7.5,-2){$LS$}
\tkzText(-2,8.5){$\tau Iso$}
\tkzText(-6.5,6.5){$m_T^{\text{lead-}\ell}>150$ GeV}
\tkzText(-4,3.5){$\tau$ \textit{anti-Iso}}
\tkzText(-6.5,1.5){$m_T^{\text{lead-}\ell}<150$ GeV}
\tkzText[draw](2.5,7.5){$SR$}
\tkzText(7.5,7.5){$B$}
\tkzText(2.5,2.5){$C$}
\tkzText(7.5,2.5){$D$}
%\tkzFct[domain=0:2,color=blue, thick,-]{1}
\end{tikzpicture}


%\includegraphics[width=0.75\linewidth]{Plot1Mrec.pdf}   
     
    
\begin{equation*}
\textcolor{blue}{
\boxed{N_{SR}^{(QCD+WJets)}&=R_{OS/LS}\cdot(N_{B}^{\text{Data}}-N_{B}^{\text{non-(QCD+WJets)}})_{LS} }}
 \\  \quad\text{where}\quad \\
   \skip
\textcolor{blue}{
\boxed{R_{OS/LS}=\frac{(N_{C}^{\text{Data}}-N_{C}^{\text{non-(QCD+WJets)}})_{OS}}
{(N_{D}^{\text{Data}}-N_{D}^{\text{non-(QCD +WJets)}})_{LS}}}}
\end{equation*}
\end{center}  
\end{frame}
